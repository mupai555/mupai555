# ----- INICIALIZAR SESSION STATE -----
defaults = {
    "datos_completos": False,
    "correo_enviado": False,
    "nombre": "",
    "telefono": "",
    "email_cliente": "",
    "edad": 25,
    "sexo": "Hombre",
    "fecha_llenado": datetime.now().strftime("%Y-%m-%d"),
    "acepto_terminos": False
}
